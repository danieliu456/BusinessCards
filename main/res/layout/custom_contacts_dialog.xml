<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/similar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textDialog"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="4dp"
        android:text="Select the same contact:"
        android:textColor="@color/primaryTextColor"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/newBut"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/contactSimilarScrollView"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textDialog"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:id="@+id/contactSimilar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/newBut"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:text="New"
        app:layout_constraintBottom_toTopOf="@+id/contactSimilarScrollView"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>